{
  "name": "hydro-js",
  "version": "1.0.8",
  "description": "A lightweight reactive library",
  "type": "module",
  "main": "./dist/library.js",
  "module": "./dist/library.js",
  "types": "./dist/library.d.ts",
  "exports": {
    "require": "./dist/library.cjs.js",
    "import": "./dist/library.js",
    "default": "./dist/library.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"serve\" \"tsc -w\"",
    "test": "tsc && webpack ./dist/tests/index.js -o ./dist/tests --mode production && node ./dist/tests/runner.js",
    "test:watch": "concurrently \"tsc -w\" \"webpack ./dist/tests/index.js -o ./dist/tests --mode production -w\" \"nodemon ./dist/tests/runner.js\"",
    "update": "npx npm-check-updates -u && npx typesync && npm i && npm outdated"
  },
  "keywords": [
    "reactive",
    "libary",
    "javascript",
    "dom",
    "modern",
    "fast"
  ],
  "author": "Fabian Krutsch <f.krutsch@gmx.de> (https://krutsch.netlify.app/)",
  "license": "MIT",
  "devDependencies": {
    "@types/concurrently": "^5.2.1",
    "@types/nodemon": "^1.19.0",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.6",
    "playwright": "^1.6.2",
    "serve": "^11.3.2",
    "typescript": "^4.1.2",
    "webpack": "^5.6.0",
    "webpack-cli": "^4.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Krutsch/hydro-js.git"
  },
  "bugs": "https://github.com/Krutsch/hydro-js"
}
