{
  "name": "hydro-js",
  "version": "1.0.0",
  "description": "A lightweight reactive library",
  "type": "module",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "dev": "concurrently \"serve\" \"tsc -w\" \"webpack ./dist/src/tests/dev.js -o ./dist/dev --mode development -w\"",
    "test": "tsc && webpack ./dist/src/tests/index.js -o ./dist/test --mode production && node ./dist/src/tests/results.js",
    "test:watch": "concurrently \"tsc -w\" \"webpack ./dist/src/tests/index.js -o ./dist/test --mode production -w\" \"nodemon ./dist/src/tests/results.js\"",
    "update": "npm update && typesync && npm i && npm outdated"
  },
  "keywords": [
    "reactive",
    "libary",
    "javascript",
    "dom",
    "modern",
    "fast"
  ],
  "author": "Fabian Krutsch <f.krutsch@gmx.de> (https://krutsch.netlify.app/)",
  "license": "MIT",
  "devDependencies": {
    "@types/concurrently": "^5.2.1",
    "@types/nodemon": "^1.19.0",
    "concurrently": "^5.3.0",
    "nodemon": "^2.0.5",
    "playwright": "^1.5.1",
    "serve": "^11.3.2",
    "typescript": "^4.0.3",
    "typesync": "^0.8.0",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.0.0"
  }
}
